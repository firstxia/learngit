<resources>

    <style name="MyBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- ActionBar 背景色,主题样式-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 沉浸式状态栏,状态栏的颜色会随着actionBar 的颜色改变而改变-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 主体颜色 包括单选 复选框和ProgressBar和底部的导航等的颜色等等-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyBaseTheme">
        <!-- Support library compatibility -->
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/txt_title</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <dimen name="list_item_title_size">16dp</dimen>
    <color name="txt_title">#333333</color>
</resources>
